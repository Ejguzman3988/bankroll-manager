<h5 class="center"><%= @user.name.capitalize %>'s Profile</h5>
<% if @user == current_user %>
    <div class='inline'>
    <h5>BANKROLL: $<%= @user.bankroll %>
        <%= link_to "Adjust Bankroll Total", edit_user_path(current_user), class: "blue-grey darken-2 waves-effect waves-light btn-small right"  %>
        </h5>
    </div>
    <h5>Suggested Buy In: $<%= @user.bankroll_buy_in %></h5>
<% end %>
<%= render partial: 'tournaments/tournaments', locals: {tournaments: Tournament.user_tourneys(@user.id)} %>