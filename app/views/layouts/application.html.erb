<!DOCTYPE html>
<html>
  <head>
    <title>BankrollManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <!-- NAVIGATION -->
  <% unless user_signed_in? %> 
    <%= link_to "Home", root_path %> 
    <%= link_to "Sign In", new_user_session_path %>
    <%= link_to "Register", new_user_registration_path  %>
  <% else %>
    <%= link_to "Home" %>
    <%= link_to "Log Out", destroy_user_session_path, method: "delete" %> <br>
    <%= link_to "All Tournaments", tournaments_path %> <br>
    <%= link_to "My Tournaments", user_tournaments_path(current_user) %> <br>
    <%= link_to "ADD TOURNEY", new_user_tournament_path(current_user) %>
  <% end %>
  <!-- END NAVIGATION -->

  <!-- FLASH -->
  
  <br>
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>

  <% if flash[:notice] %>
    <% flash[:notice].each do |message| %>
      <%= message %> <br>
    <% end %>
  <% end %>
  
  <!-- END FLASH -->
  <body>
    <%= yield %>
  </body>
</html>
